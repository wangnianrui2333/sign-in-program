/* pages/add/add.wxss */
/*班级列表样式 */
.class_top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background-color: white;
  height: 100rpx;
  
}
.class_top1{
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  margin-left: 40rpx;
  width: 60%;
}
.class_top1_2{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: orange;
}


/*弹窗样式*/
.add{
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  
}
.add_cancel{
  background-color: #dddee1;
}
.add_comfire{
  background-color: #19be6b;
}

.add view{
   width: 50%;
   height: 100%;
   display: flex;
   justify-content: center;
   align-items: center;
}

/*遍历班级样式*/
.class_list{
  width: 90%;
  margin-left: 5%;
  margin-top: 30rpx;
}
.caozuo_button{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
  height: 85%;

}
