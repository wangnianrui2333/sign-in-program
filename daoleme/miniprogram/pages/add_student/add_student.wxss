/* pages/add_student/add_student.wxss */
/*顶部头像样式*/
.student_top{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

/*输入姓名区域样式*/
.input_name{
    font-size: 30rpx;
    width: 90%;
    margin-left: 5%;
    overflow: hidden;
    box-sizing: border-box;
    margin-top: 50rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.input_button{
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100rpx;
}
.input_button view{
   width: 200rpx;
   height: 90%;
   border-radius: 20rpx;
   display: flex;
   justify-content: center;
   align-items: center;
   background-color: #2d8cf0;
   font-size: 35rpx;
   color: white;
}

